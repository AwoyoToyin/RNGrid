{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react",
    "rootDir": "src",
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
        "react",
        "react-native",
        "jest"
    ],
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules"
  ]
}
